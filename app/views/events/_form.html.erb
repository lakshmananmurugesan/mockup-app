    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
   </p>
   
   <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
   </p>

   <p>
    <%= f.label :phone_no %><br>
    <%= f.text_field :phone_no %>
   </p>

   <p>
    <%= f.label :event_name %><br>
    <%= f.text_field :event_name %>
   </p>

