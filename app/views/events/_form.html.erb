    <%= f.label :event_type %><br>
    <%= f.select :event_type, ['Technical Event', 'Symposium', 'Cultural Event', 'Management Event',
      'Literary Event', 'Sports Event', 'Conference', 'Online Event', 'Seminar', 'Workshops'] %>
   </p>

   <p>
    <%= f.label :study_place %><br>
    <%= f.text_field :study_place %>
   </p>

   <p>
    <%= f.label :country %><br>
    <%= f.select :country, ['India', 'US'] %>
   </p>

   <p>
    <%= f.label :state %><br>
    <%= f.select :state, ['Tamilnadu', 'Andhra'] %>
   </p>

   <p>
    <%= f.label :district %><br>
    <%= f.select :district, ['Chennai', 'Tiruvallur'] %>
   </p>

   <p>
    <%= f.label :zip %><br>
    <%= f.text_field :zip %>
   </p>
   
   <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
   </p>

