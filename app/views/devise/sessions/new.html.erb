<div class="container">
<h2>Log in</h2>

<%if flash.keys.size > 0 %>
  <div id="flashmsg">
    <% flash.each do |key, value| %>
      <% if value == 'Invalid email or password.' %>
        <div class="alert alert-danger"> <%= value %> </div>
      <% elsif value == 'Signed out successfully.'%>
         <%= "" %> 
      <% end %>
    <% end %>    
  </div>
<%end%>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="col-md-4">
  
  <div class="field">
  <%= devise_error_messages! %>
    <%= f.label :email %><br />
    <%= f.text_field :email, class: "form-control validate[required,custom[email]]", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "form-control validate[required]", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div><br/>
   <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
  </div>
<% end %>


</div>
<script>
  $(document).ready(function(){
    $('#flashmsg').hide();
    setInterval(function()
    {
      $('#flashmsg').slideUp(500);
    }, 1000);
    $('#flashmsg').show();    
  })
</script>
<script type="text/javascript">
$(document).ready(function(){
    $("#new_user").validationEngine();
});
</script>