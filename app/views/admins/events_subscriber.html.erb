<div class="container table-responsive">
  <% if @event_subscribers.count == 0 %>
  <p> Waiting for first Subscriber ! </p>
  <% else %>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Email</th>
        <th>User Name</th>
      </tr>
    </thead>
    <tbody>
      <% @event_subscribers.each do |subscribe| %>
      <tr>
        <td><%= subscribe.email_id %></td>
        <td><%= subscribe.user.name %></td>
      </tr>
      <% end %>
      
    </tbody>
  </table>
  <% end %>
</div>