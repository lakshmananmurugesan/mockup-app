<div class="container table-responsive">
  <% if Event.all.where(is_published: false).count == 0 %>
  <p> Waiting for first Event ! </p>
  <% else %>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Event Name</th>
        <th>Live Zone</th>
      </tr>
    </thead>
    <tbody>
      <% Event.all.where(is_published: false).each do |event| %>
      <tr>
        <td><%= event.event_name %></td>
        <td><button type="button" class="btn btn-green"><strong><%= link_to 'Make It Live', admins_publish_event_path(event_id: event.id) %></strong></button></td>
      </tr>
      <% end %>
      
    </tbody>
  </table>
  <% end %>
</div>